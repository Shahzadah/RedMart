<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextFontRobotoRegular">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TextFontRobotoRegular">
        <item name="typeface">OpenSans-Regular.ttf</item>
    </style>

    <style name="TextFontRobotoBold">
        <item name="typeface">OpenSans-Semibold.ttf</item>
    </style>

    <style name="ProductTitle" parent="TextFontRobotoBold">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProductDesc" parent="TextFontRobotoRegular">
        <item name="android:textColor">@color/text_notes_details</item>
        <item name="android:textSize">@dimen/text_size_details</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeaderTextAlert" parent="TextFontRobotoBold">
        <item name="android:textSize">@dimen/text_size_alert_heading</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionTextAlert" parent="TextFontRobotoRegular">
        <item name="android:textSize">@dimen/text_size_alert_desc</item>
        <item name="android:textColor">@color/grey_one</item>
    </style>

    <style name="ButtonTextAlertBold" parent="TextFontRobotoBold">
        <item name="android:textSize">@dimen/text_size_alert_button</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingLeft">@dimen/padding_15dp</item>
        <item name="android:paddingTop">@dimen/padding_15dp</item>
    </style>

</resources>